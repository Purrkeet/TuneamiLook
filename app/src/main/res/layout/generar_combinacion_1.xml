<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/generarCombinacion1__foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/generarCombinacion1__buttonContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#47cec0"
            android:padding="12dp"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#f1f2f4" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/generarCombinacion1__foot">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Selecciona los tipos de prenda a combinar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#808b99" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Parte superior"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#47cec0" />

                    <RadioGroup
                        android:id="@+id/generarCombinacion1__radioGroupParteSuperior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonPolo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Polo"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonCamisa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camisa"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonSudadera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sudadera"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Chaquetas"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#47cec0" />

                    <RadioGroup
                        android:id="@+id/generarCombinacion1__radioGroupChaquetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonCasaca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Casaca"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonSueter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Súeter"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonPolera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Polera"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Parte inferior"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#47cec0" />

                    <RadioGroup
                        android:id="@+id/generarCombinacion1__radioGroupParteInferior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonPantalon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pantalón"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonShorts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shorts"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonJeans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jeans"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Zapatos"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#47cec0" />

                    <RadioGroup
                        android:id="@+id/generarCombinacion1__radioGroupZapatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonZapatillas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zapatillas"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonSandalias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sandalias"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />

                        <RadioButton
                            android:id="@+id/generarCombinacion1__radioButtonBotas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Botas"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#808b99" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>